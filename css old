.container {
  display: flex;
  flex-wrap: wrap;
}

.box {
  width: 25%; /* Acesta este doar un exemplu; poți ajusta dimensiunea pentru fiecare ecran */
  padding: 10px;
  box-sizing: border-box;
}

@media screen and (max-width: 600px) {
  /* Ajustează stilul pentru ecrane cu lățime maximă de 600px */
  .box {
      width: 50%; /* Poți ajusta dimensiunea pentru a se potrivi cu ecranul */
  }
}